{
  "name": "LiveServer",
  "displayName": "Live Server",
  "description": "Launch a development Live Server to browser and watch live preview.",
  "version": "1.4.0",
  "publisher": "ritwickdey",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "HTML Preview",
    "live preview",
    "live server",
    "live reload"
  ],
  "preview": true,
  "galleryBanner": {
    "color": "#41205f",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.liveServer.goOffline",
        "title": "Close Live Server",
        "category": "Live Server"
      },
      {
        "command": "extension.liveServer.goOnline",
        "title": "Open Live Server",
        "category": "Live Server"
      }
    ],
    "keybindings": [
      {
        "command": "extension.liveServer.goOffline",
        "key": "alt+L C",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.liveServer.goOnline",
        "key": "alt+L O",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.liveServer.goOnline",
          "group": "myGrp@liveServer",
          "when": "resourceLangId == html"
        },
        {
          "command": "extension.liveServer.goOffline",
          "group": "myGrp@liveServer",
          "when": "resourceLangId == html"
        }
      ]
    },
    "configuration": {
      "title": "Live Server Config",
      "properties": {
        "liveServer.settings.port": {
          "type": [
            "number"
          ],
          "default": 5500,
          "description": "Set Custom Port Number of Live Server"
        },
        "liveServer.settings.root": {
          "type": [
            "string"
          ],
          "default": "/",
          "description": "Set Custom root of Live Server. \nTo change root the the server to sub folder of workspace, use '/' and relative path from workspace. \nExample: /subfolder1/subfolder2"
        },
        "liveServer.settings.CustomBrowser": {
          "type": ["string","null"],
          "default": "null",
          "description": "Specify custom browser settings for Live Server. \nBy Default it will open your default favorite browser.",
          "enum": [
            "chrome", "firefox", "null"
          ]
          
        }
      }
    }
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/ritwickdey/vscode-live-server/issues",
    "email": "ritwickdey@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ritwickdey/vscode-live-server.git"
  },
  "homepage": "https://github.com/ritwickdey/vscode-live-server/blob/master/README.md",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "http-shutdown": "^1.2.0",
    "live-server": "^1.2.0",
    "opn": "^5.1.0"
  }
}
